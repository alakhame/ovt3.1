<html>
<head>
	<meta charset="utf-8" />
	<link rel="icon" href="{{asset('img/orange/orange.png')}}" /> 
	<link rel="stylesheet" type="text/css" href="{{asset('css/signin_desktop.css')}}" />
	<script type="text/javascript" src="{{asset('js/jquery.min.js')}}"></script>
</head>
<body>
	<div class="container">
		<div id="header"  >
			<img id="logorange" src="{{asset('img/orange/orange.png')}}"   />
			<div id="header_text">
				<div id="header_title">Orange Voice Transcription</div>
				<div id="header_subtitle">version 3.0</div>
			</div>
		</div>
		<div class="title_connexion">
			<div>Connexion</div>
			<span>Mot de passe oublié</span>
		</div>
		<form action="{{ path("fos_user_security_check") }}" method="post">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<input type="text" class="mail"   id="username" name="_username" value="{{ last_username }}"  placeholder="Adresse email" autofocus /> 
			<input type="text" class="remail" placeholder="Retapez adresse email"  /> 
			<input 	type="password" id="password" class="password" name="_password" placeholder="Mot de passe"required="required">
			<div 	class="forgot_password">Mot de passe oublié ?</div>
			{% if error %}
			    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<input  type="submit" id="_submit" name="_submit"  class="log theme_color_background" value="Connexion">   </input> 
		</form> 
	</div>
	<script type="text/javascript" src="{{asset('js/signin.js')}}" ></script>
</body>
</html>