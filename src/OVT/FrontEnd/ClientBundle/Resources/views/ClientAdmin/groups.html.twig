			<script type="text/javascript">

				$('#formSubmit').click(function(){
 					$('#nameKForm').val($('#nameDiv').text());
					$('#moneyLimitKForm').val($('#moneyLimitDiv').text());
					$('#descriptionKForm').val($('#descriptionDiv').text());  
					$('#updateForm').submit();
