{% extends "OVTBackEndAdminBundle:SuperAdmin:profil.html.twig" %}
{% block links %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('ress/css/gestion.css')}}" /> 
	
{% endblock %}
	{% block container %}

		<div id="cadre">
			<div id="gestion_title">
				<p  >Gestion des Clients
			</div>
			<div id="inside_cadre">
				<div class="list">
					<div class="list_border">
						<div class="entete">
							<label for="tri"> Trier Par : </label>
							<select name="choix_tri" > 
							</select>
						</div>
						<br/>

						<div class="user_list">
							{{render(controller('OVTBackEndAdminBundle:OrganisationAdmin:getOrganisationsByType',{type:'client',action:'reload'}))}}
						</div>
					</div>

					<div class="new_user"  >
						<a href="{{path('ovt_back_end_admin_gestion_new',{gestion:'service'})}}">
							<img width="16px" height="16px"  src="{{asset('ress/img/add.png')}}">
							Nouveau
						</a>
					</div>

				</div>

				<div class="infos">
					<h3>Ajout d'une Nouvelle Entreprise </h3>
					<hr/>
					<div class="addForm">
					 	<form action="{{path('ovt_back_end_admin_gestion_new_organisation',{organisation:'client'})})}}" method="post">
					 		<table>
					 			<tbody>
					 				<tr>
					 					<td><label for="orgName" > Nom de l'entreprise : </label>
								 		<td><input style="width:221px" type="text" name="orgName" placeholder="nom organisation"></input></td> <br/>
								 	</tr>
								 	<tr>
					 					<td><label for="address" > Adresse : </label>
								 		<td><input style="width:221px" type="text" name="address" placeholder="adresse"></input></td> <br/>
								 	</tr>
								 	<tr>
					 					<td><label for="phoneNumber" >Numéro de téléphone : </label>
								 		<td><input style="width:221px" type="text" name="phoneNumber" placeholder="Numéro de téléphone"></input></td> <br/>
								 	</tr>
									<tr>
					 					<td><label for="adminID" > Administrateur : </label>
								 		<td>
								 			<select style="width:221px" type="text" name="adminID"  >
												{{ render(controller('OVTBackEndAdminBundle:UserAdmin:listAdmins'))}}
								 			</select>
								 		</td> <br/>
								 	</tr>
								</tbody>
							</table>
							<input style="float:right; margin-right:200px" type="submit" class="submitButtton" value="Ajouter"> 
							</input>
							
						</form>
					</div>

				</div>
			</div>


		</div>
	

	{% endblock %} 